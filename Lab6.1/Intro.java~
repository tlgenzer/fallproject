import mayflower.*;

public class Intro extends World
{
    public Intro() 
    {
     setBackground("images/intro.png");
     addObject(new Santa(), 45, 45);
     
     
     }
     public void act()
     {
       if(Mayflower.isKeyDown( Keyboard.KEY_SPACE )
      {
        setLocation( 45, 45);
        Mayflower.setWorld(new BasicWorld());
      }
     }
     
    }